
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Reglas para la colección 'rankings'
    match /rankings/{userId} {
      // Cualquier usuario autenticado puede leer cualquier perfil.
      // Esto es necesario para el ranking global y para ver los perfiles de amigos.
      allow get: if request.auth != null;

      // Permitir la lectura de la colección (list) para el ranking global.
      allow list: if request.auth != null;

      // El usuario solo puede escribir/actualizar su propio documento de ranking.
      allow update, write: if request.auth != null && request.auth.uid == userId;

      // Reglas para subcolecciones de un jugador
      match /friends/{friendId} {
        // Solo el dueño del perfil puede gestionar su lista de amigos
        allow read, write, delete: if request.auth != null && request.auth.uid == userId;
      }

      match /notifications/{notificationId} {
        // Cualquiera puede crear una notificación (para enviar invitaciones)
        allow create: if request.auth != null;
        // Solo el dueño puede leer, actualizar o borrar sus notificaciones
        allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      }
      
      match /gameHistory/{gameId} {
          // Solo el dueño puede leer y escribir en su historial de partidas
          allow read, write, create, delete: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Reglas para la colección 'rooms'
    match /rooms/{roomId} {
        // Cualquier usuario autenticado puede leer una sala.
        allow read: if request.auth != null;
        // Cualquier usuario autenticado puede crear o actualizar una sala.
        allow create, update: if request.auth != null;

        // Reglas para subcolección de chat
        match /chat/{messageId} {
            // Cualquier usuario autenticado puede leer y escribir en el chat de una sala.
            allow read, write: if request.auth != null;
        }
    }
  }
}
