rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Reglas para la colección 'users'
    match /users/{userId} {
      // Cualquier usuario autenticado puede leer el perfil de otro usuario.
      // Esto es necesario para mostrar nombres y avatares en rankings y listas de amigos.
      allow get: if request.auth != null;

      // Un usuario solo puede leer (listar) su propio perfil, no el de otros.
      allow list: if request.auth != null && request.auth.uid == userId;

      // Un usuario solo puede crear su propio perfil.
      allow create: if request.auth != null && request.auth.uid == userId;

      // Un usuario solo puede actualizar su propio perfil.
      allow update: if request.auth != null && request.auth.uid == userId;

      // Un usuario no puede borrar su perfil (generalmente se gestiona desde el backend).
      allow delete: if false;

      // Subcolección de amigos: solo el propietario del perfil puede gestionar su lista de amigos.
      match /friends/{friendId} {
        allow read, list, create, update, delete: if request.auth != null && request.auth.uid == userId;
      }

      // Subcolección de historial de juegos: solo el propietario puede leer su historial.
      match /gameHistory/{gameId} {
        allow read, list: if request.auth != null && request.auth.uid == userId;
        // La creación se hace desde el servidor (funciones) al finalizar una partida.
        allow create: if request.auth != null && request.auth.uid == userId; 
        allow update, delete: if false; // No se permite modificar ni borrar el historial.
      }
      
      // Subcolección de notificaciones
      match /notifications/{notificationId} {
        allow read, list, update: if request.auth != null && request.auth.uid == userId;
        // La creación se hace a través de funciones del servidor, no directamente por el cliente.
        allow create: if request.auth != null; // Cualquiera autenticado puede enviar una notificación a otro.
        allow delete: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Reglas para la colección 'rooms'
    match /rooms/{roomId} {
      // Cualquiera autenticado puede leer una sala (para unirse o ver el estado).
      allow read: if request.auth != null;
      
      // Solo un usuario autenticado puede crear una sala.
      allow create: if request.auth != null;
      
      // Solo un usuario autenticado puede actualizar una sala (ej: unirse, cambiar estado).
      // Se podrían añadir reglas más granulares (ej: solo el host puede cambiar settings).
      allow update: if request.auth != null;
      
      // Nadie puede borrar una sala directamente (se podría gestionar con funciones de limpieza).
      allow delete: if false;

      // Subcolección de chat en una sala
      match /chat/{messageId} {
        // Cualquiera autenticado puede leer y escribir mensajes en una sala.
        allow read, create: if request.auth != null;
        allow update, delete: if false; // No se permite editar/borrar mensajes.
      }
    }
  }
}
