
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Perfiles de Usuario y Ranking
    match /users/{userId} {
      // Cualquiera puede leer perfiles (para buscar amigos y ver rankings)
      allow read: if request.auth != null;
      // El usuario solo puede escribir en su propio documento
      allow write: if request.auth.uid == userId;

      // Sub-colección de amigos
      match /friends/{friendId} {
        // El usuario solo puede leer y escribir su propia lista de amigos
        allow read, write: if request.auth.uid == userId;
      }

      // Sub-colección de notificaciones
      match /notifications/{notificationId} {
        // Cualquiera puede crear una notificación para un usuario (para enviar invitaciones)
        allow create: if request.auth != null;
        // El usuario solo puede leer y actualizar sus propias notificaciones
        allow read, update, delete: if request.auth.uid == userId;
      }

      // Sub-colección de historial de partidas
      match /gameHistory/{gameId} {
        // El usuario solo puede crear y leer su propio historial de partidas
        allow create, read: if request.auth.uid == userId;
      }
    }

    // Salas de Juego
    match /rooms/{roomId} {
      // Cualquiera autenticado puede leer o crear una sala
      allow read, create: if request.auth != null;
      // Solo un jugador autenticado puede actualizar una sala (unirse, cambiar estado, etc.)
      allow update: if request.auth != null;
      
      // Sub-colección de chat de la sala
      match /chat/{messageId} {
        // Cualquiera autenticado puede leer y escribir en el chat de una sala
        allow read, write: if request.auth != null;
      }
    }
  }
}
