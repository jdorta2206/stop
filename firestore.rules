rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Reglas para la colección 'rankings'
    match /rankings/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId;

      // Subcolecciones de un jugador
      match /friends/{friendId} {
        allow read, write: if request.auth.uid == userId;
      }
      match /gameHistory/{gameId} {
         allow read, write: if request.auth.uid == userId;
      }
    }
    
    // Reglas para la colección 'rooms' (salas de juego)
    match /rooms/{roomId} {
      // Cualquiera puede leer la información de una sala para unirse
      allow read: if request.auth != null;
      // Cualquiera puede crear una sala. La actualización se permite para que los jugadores puedan unirse/salir.
      allow create, update: if request.auth != null;
    }
    
    // Reglas para la colección 'notifications'
    match /notifications/{notificationId} {
        // Cualquiera puede crear una notificación (para enviar un desafío)
        allow create: if request.auth != null;
        // Solo el destinatario de la notificación puede leerla, actualizarla o borrarla.
        allow read, update, delete: if request.auth != null && request.auth.uid == resource.data.recipientId;
    }

    // Reglas para las subcolecciones de chat dentro de las salas
    match /rooms/{roomId}/chat/{messageId} {
      allow read, create: if request.auth != null;
    }
  }
}
