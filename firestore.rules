
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Regla global: Permite leer y escribir en toda la base de datos
    // a cualquier usuario que haya iniciado sesi√≥n.
    // Esto es temporal para desbloquear el desarrollo y solucionar los errores de permisos.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
