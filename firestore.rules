
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    match /rankings/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;

      match /gameHistory/{gameId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      match /friends/{friendId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    match /rooms/{roomId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update: if request.auth != null && (request.auth.uid in resource.data.players || request.auth.uid == request.resource.data.hostId);
      
      match /chat/{messageId} {
        allow read: if true;
        allow create: if request.auth != null && request.auth.uid in get(/databases/$(database)/documents/rooms/$(roomId)).data.players;
      }
    }
  }
}
