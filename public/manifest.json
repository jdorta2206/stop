{
  "name": "Stop - Juego de Palabras",
  "short_name": "Stop",
  "description": "¡Juega al clásico juego Stop, multilenguaje, contra la IA o amigos! Demuestra tu vocabulario en categorías como países, animales, nombres y más.",
  "start_url": "/",
  "id": "/?homescreen=1",
  "display": "standalone",
  "display_override": [
    "standalone",
    "minimal-ui"
  ],
  "background_color": "#ef4444",
  "theme_color": "#ef4444",
  "orientation": "any",
  "lang": "es",
  "dir": "ltr",
  "categories": [
    "games",
    "education"
  ],
  "icons": [
    {
      "src": "/images/icons/android-chrome-192x192.png",
      "sizes": "192x192",
      "type": "image/png"
    },
    {
      "src": "/images/icons/android-chrome-512x512.png",
      "sizes": "512x512",
      "type": "image/png"
    },
    {
      "src": "/images/icons/apple-touch-icon.png",
      "sizes": "180x180",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/images/icons/favicon.svg",
      "sizes": "48x48 72x72 96x96 128x128 256x256",
      "type": "image/svg+xml",
      "purpose": "any"
    }
  ],
  "screenshots": [
    {
      "src": "/images/screenshots/screenshot-desktop-1.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Pantalla de inicio del juego en escritorio"
    },
    {
      "src": "/images/screenshots/screenshot-desktop-2.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Partida en curso en escritorio"
    },
    {
      "src": "/images/screenshots/screenshot-mobile-1.png",
      "sizes": "360x740",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Pantalla de inicio del juego en móvil"
    },
    {
      "src": "/images/screenshots/screenshot-mobile-2.png",
      "sizes": "360x740",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Partida en curso en móvil"
    }
  ],
  "shortcuts": [
    {
      "name": "Jugar Solo",
      "short_name": "Solo",
      "description": "Iniciar una nueva partida contra la IA",
      "url": "/play-solo",
      "icons": [
        {
          "src": "/images/icons/shortcut-solo.png",
          "sizes": "192x192"
        }
      ]
    },
    {
      "name": "Ranking Global",
      "short_name": "Ranking",
      "description": "Ver la tabla de clasificación global",
      "url": "/leaderboard",
      "icons": [
        {
          "src": "/images/icons/shortcut-leaderboard.png",
          "sizes": "192x192"
        }
      ]
    }
  ],
  "share_target": {
    "action": "/share-target",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "launch_handler": {
    "client_mode": "navigate-new"
  },
  "protocol_handlers": [
    {
      "protocol": "web+stop",
      "url": "/room?roomId=%s",
      "title": "Unirse a sala de Stop"
    }
  ],
  "file_handlers": [
    {
      "action": "/handle-file",
      "accept": {
        "text/*": [
          ".txt"
        ]
      }
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "iarc_rating_id": "",
  "scope_extensions": [
    {
      "origin": "*.juego-stop.netlify.app"
    }
  ],
  "widgets": [
    {
      "name": "Ranking Rápido de Stop",
      "description": "Mira el top 3 del ranking directamente desde tu pantalla de inicio.",
      "tag": "ranking-widget",
      "template": "ranking-template",
      "ms_ac_template": "widgets/ranking.json",
      "data": "widgets/ranking-data.json",
      "type": "application/json"
    }
  ],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "note_taking": {
    "new_note_url": "/new-note",
    "needs_user_activation": true
  }
}