{
  "name": "Stop - Juego de Palabras Multijugador",
  "short_name": "Stop",
  "description": "¡Juega al clásico juego Stop, multilenguaje, contra la IA o amigos! Demuestra tu vocabulario en categorías como países, animales, nombres y más.",
  "lang": "es",
  "dir": "ltr",
  "scope": "/",
  "start_url": "/",
  "display": "standalone",
  "display_override": [
    "standalone",
    "minimal-ui"
  ],
  "background_color": "#ef4444",
  "theme_color": "#ef4444",
  "icons": [
    {
      "src": "/images/icons/android-chrome-192x192.png",
      "sizes": "192x192",
      "type": "image/png"
    },
    {
      "src": "/images/icons/android-chrome-512x512.png",
      "sizes": "512x512",
      "type": "image/png"
    },
    {
      "src": "/images/icons/maskable-icon.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable"
    }
  ],
  "screenshots": [
    {
      "src": "/images/screenshots/screenshot-desktop.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Vista de escritorio del juego Stop"
    },
    {
      "src": "/images/screenshots/screenshot-mobile.png",
      "sizes": "540x720",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Vista móvil del juego Stop"
    }
  ],
  "shortcuts": [
    {
      "name": "Jugar Solo",
      "short_name": "Jugar",
      "description": "Iniciar una partida rápida contra la IA",
      "url": "/play-solo",
      "icons": [{ "src": "/images/icons/shortcut-play.png", "sizes": "192x192" }]
    },
    {
      "name": "Ver Ranking",
      "short_name": "Ranking",
      "description": "Ver la tabla de clasificación global",
      "url": "/leaderboard",
      "icons": [{ "src": "/images/icons/shortcut-leaderboard.png", "sizes": "192x192" }]
    }
  ],
  "share_target": {
    "action": "/share-target",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "protocol_handlers": [
    {
      "protocol": "web+stop",
      "url": "/?q=%s"
    }
  ],
  "categories": ["games", "education"]
}
