{
  "name": "Stop - Juego de Palabras",
  "short_name": "Stop",
  "description": "Juega al clásico juego de Stop (Tutti Frutti) online. Desafía a la IA o a tus amigos en este juego de palabras multi-idioma.",
  "start_url": "/?homescreen=1",
  "display": "standalone",
  "background_color": "#dc2626",
  "theme_color": "#ef4444",
  "orientation": "any",
  "categories": ["games", "education", "entertainment"],
  "lang": "es-ES",
  "dir": "ltr",
  "scope": "/",
  "id": "/?homescreen=1",
  "iarc_rating_id": "",
  "related_applications": [],
  "prefer_related_applications": false,
  "scope_extensions": [{ "origin": "*.netlify.app" }, { "origin": "*.cloudworkstations.dev" }],
  "launch_handler": {
    "client_mode": "navigate-new"
  },
  "file_handlers": [
    {
      "action": "/handle-file",
      "accept": {
        "text/*": [".txt"]
      }
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+stop",
      "url": "/protocol?type=%s"
    }
  ],
  "widgets": [
    {
      "name": "Ranking Rápido",
      "description": "Ver el ranking global directamente desde tu pantalla de inicio.",
      "tag": "ranking",
      "template": "ranking_widget",
      "ms_ac_template": "ranking_widget.json",
      "data": "ranking.json",
      "type": "application/json"
    }
  ],
  "edge_side_panel": {
    "preferred_width": 480
  },
  "note_taking": {
    "new_note_url": "/new-note",
    "preferred_format": "plaintext"
  },
  "icons": [
