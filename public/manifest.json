    },
    {
      "src": "/images/screenshots/screenshot-mobile-2.png",
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Ranking en Móvil"
    }
  ],
  "categories": [
    "games",
    "education"
  ],
  "shortcuts": [
    {
      "name": "Jugar vs IA",
      "short_name": "Jugar",
      "description": "Iniciar una nueva partida contra la IA",
      "url": "/play-solo",
      "icons": [
        {
          "src": "/images/icons/shortcut-play.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Ver Ranking",
      "short_name": "Ranking",
      "description": "Ver la tabla de clasificación global",
      "url": "/leaderboard",
      "icons": [
        {
          "src": "/images/icons/shortcut-leaderboard.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "share_target": {
    "action": "/share-target",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "related_applications": [],
  "prefer_related_applications": false,
  "iarc_rating_id": "",
  "launch_handler": {
    "client_mode": "navigate-new"
  },
  "file_handlers": [
    {
      "action": "/handle-file",
      "accept": {
        "text/*": [
          ".txt"
        ]
      }
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+stop",
      "url": "/protocol-handler?q=%s",
      "title": "Handler del Juego Stop"
    }
  ],
  "scope_extensions": [
    {
      "origin": "*"
    }
  ],
  "widgets": [
    {
      "name": "Ranking Rápido de Stop",
      "description": "Mira el top 3 del ranking directamente desde tu pantalla de inicio.",
      "tag": "ranking-widget",
      "template": "ranking-widget-template",
      "ms_ac_template": "widgets/ranking.json",
      "data": "widgets/ranking-data.json",
      "type": "application/json"
    }
  ],
  "edge_side_panel": {}
