{
  "name": "Stop - Juego de Palabras Multijugador Online",
  "short_name": "Stop",
  "description": "¡Juega al clásico juego Stop, multilenguaje, contra la IA o amigos! Demuestra tu vocabulario en categorías como países, animales, nombres y más.",
  "start_url": "/?homescreen=1",
  "display": "standalone",
  "background_color": "#ef4444",
  "theme_color": "#ef4444",
  "lang": "es",
  "dir": "ltr",
  "orientation": "any",
  "scope": "/",
  "id": "/?homescreen=1",
  "display_override": [
    "standalone",
    "minimal-ui"
  ],
  "categories": [
    "games",
    "education",
    "entertainment"
  ],
  "icons": [
    {
      "src": "/images/icons/android-chrome-192x192.png",
      "sizes": "192x192",
      "type": "image/png"
    },
    {
      "src": "/images/icons/android-chrome-512x512.png",
      "sizes": "512x512",
      "type": "image/png"
    },
    {
      "src": "/images/icons/apple-touch-icon.png",
      "sizes": "180x180",
      "type": "image/png"
    },
    {
      "src": "/images/icons/icon.svg",
      "sizes": "any",
      "purpose": "any"
    }
  ],
  "screenshots": [
    {
      "src": "/images/screenshots/screenshot-desktop.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Vista de escritorio del juego Stop"
    },
    {
      "src": "/images/screenshots/screenshot-mobile.png",
      "sizes": "640x1136",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Vista móvil del juego Stop"
    }
  ],
  "shortcuts": [
    {
      "name": "Jugar Solo",
      "short_name": "Jugar",
      "description": "Iniciar una nueva partida contra la IA",
      "url": "/play-solo",
      "icons": [
        {
          "src": "/images/icons/android-chrome-192x192.png",
          "sizes": "192x192"
        }
      ]
    },
    {
      "name": "Ver Ranking",
      "short_name": "Ranking",
      "description": "Ver la tabla de clasificación global y de amigos",
      "url": "/leaderboard",
      "icons": [
        {
          "src": "/images/icons/android-chrome-192x192.png",
          "sizes": "192x192"
        }
      ]
    }
  ],
  "share_target": {
    "action": "/share-target",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "protocol_handlers": [
    {
      "protocol": "web+stop",
      "url": "/?protocol=%s"
    }
  ],
  "launch_handler": {
    "client_mode": [
      "navigate-new",
      "focus-existing"
    ]
  },
  "file_handlers": [
    {
      "action": "/handle-file",
      "accept": {
        "text/*": [
          ".txt"
        ]
      }
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "iarc_rating_id": "",
  "widgets": [
    {
      "name": "Ranking Rápido",
      "description": "Ver el ranking actual del juego.",
      "tag": "leaderboard",
      "template": "leaderboard_template",
      "ms_ac_template": "leaderboard_template.json",
      "data": "leaderboard.json",
      "type": "application/json",
      "auth": false,
      "update": 86400
    }
  ],
  "edge_side_panel": {
    "preferred_width": 480
  },
  "scope_extensions": [
    {
      "origin": "*.juego-stop.netlify.app"
    }
  ]
}
