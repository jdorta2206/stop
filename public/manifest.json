  "iarc_rating_id": "e5c8f4d3-e7f3-4d0f-8f3b-9c5b5c8a1b9a",
  "prefer_related_applications": false,
  "related_applications": [],
  "shortcuts": [
    {
      "name": "Jugar Solo",
      "short_name": "Jugar",
      "description": "Iniciar una partida rápida contra la IA",
      "url": "/play-solo",
      "icons": [{ "src": "/play_icon.png", "sizes": "192x192" }]
    },
    {
      "name": "Ver Ranking",
      "short_name": "Ranking",
      "description": "Ver la tabla de clasificación global",
      "url": "/leaderboard",
      "icons": [{ "src": "/ranking_icon.png", "sizes": "192x192" }]
    }
  ],
  "share_target": {
    "action": "/share-target/",
    "method": "GET",
    "enctype": "application/x-www-form-urlencoded",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "file_handlers": [
    {
      "action": "/open-file",
      "accept": {
        "text/plain": [
          ".txt",
          ".stopgame"
        ]
      }
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+stopgame",
      "url": "/protocol-handler?q=%s"
    }
  ],
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "widgets": [
    {
      "name": "Ranking Rápido",
      "description": "Mira el top 3 del ranking directamente.",
      "tag": "ranking-widget",
      "template": "ranking-widget-template",
      "ms_ac_template": "ranking-widget-template.json",
      "data": "ranking-widget-data.json"
    }
  ],
  "scope_extensions": [
    { "origin": "*.netlify.app" },
    { "origin": "*.firebaseapp.com" }
  ]
}