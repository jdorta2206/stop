    },
    {
      "src": "/images/screenshots/screenshot-desktop-2.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Resultados de la Partida en Escritorio"
    },
    {
      "src": "/images/screenshots/screenshot-mobile-1.png",
      "sizes": "390x844",
