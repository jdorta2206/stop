    {
      "src": "https://juego-stop.netlify.app/screenshot2.png",
      "type": "image/png",
      "sizes": "1080x1920",
      "form_factor": "narrow",
      "label": "Pantalla de Juego"
    }
  ],
  "id": "/",
  "scope": "/",
  "lang": "es-ES",
