{
  "name": "Stop - Juego de Palabras",
  "short_name": "Stop",
  "description": "Un emocionante juego de palabras donde los jugadores deben escribir palabras que comiencen con una letra específica en diferentes categorías.",
  "start_url": "/",
  "id": "/?source=pwa",
  "display": "standalone",
  "display_override": [
    "standalone",
    "minimal-ui"
  ],
  "background_color": "#ef4444",
  "theme_color": "#ef4444",
  "orientation": "portrait-primary",
  "lang": "es-ES",
  "dir": "ltr",
  "scope": "/",
  "categories": [
    "games",
    "education",
    "entertainment"
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "iarc_rating_id": "",
  "scope_extensions": [
    { "origin": "*.netlify.app" },
    { "origin": "*.cloudworkstations.dev" }
  ],
  "shortcuts": [
    {
      "name": "Jugar Solo",
      "short_name": "Solo",
      "description": "Iniciar una nueva partida contra la IA",
      "url": "/play-solo",
      "icons": [
        { "src": "/images/icons/shortcut-solo.png", "sizes": "96x96" }
      ]
    },
    {
      "name": "Ver Ranking",
      "short_name": "Ranking",
      "description": "Ver la tabla de clasificación global",
      "url": "/leaderboard",
      "icons": [
        { "src": "/images/icons/shortcut-leaderboard.png", "sizes": "96x96" }
      ]
    }
  ],
  "icons": [
    {
      "src": "/android-chrome-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/android-chrome-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  "screenshots": [
    {
      "src": "/images/screenshots/screenshot-desktop.png",
      "sizes": "1280x720",
      "type": "image/png",
      "label": "Vista de escritorio del juego",
      "form_factor": "wide"
    },
    {
      "src": "/images/screenshots/screenshot-mobile.png",
      "sizes": "720x1280",
      "type": "image/png",
      "label": "Vista móvil del juego",
      "form_factor": "narrow"
    }
  ],
  "file_handlers": [
    {
      "action": "/handle-file",
      "accept": {
        "text/*": [".txt"]
      }
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+stop",
      "url": "/protocol-handler?value=%s"
    }
  ],
  "launch_handler": {
    "client_mode": "navigate-new"
  },
  "share_target": {
    "action": "/share-target",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "widgets": [
    {
      "name": "Ranking Rápido",
      "description": "Mira tu posición en el ranking",
      "tag": "ranking",
      "template": "ranking_template"
    }
  ]
}
